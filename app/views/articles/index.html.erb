

    <div class="flex flex-col md:flex-row">

        <!-- Sidebar for Categories -->
        <aside class="w-full md:w-48 bg-white p-6 shadow-md md:shadow-none md:border-r border-gray-200">
  <h2 class="text-lg font-semibold mb-4">Categories</h2>
  <ul>
    <!-- "All" category -->
    <li class="mb-2">
      <%= link_to 'All', articles_path, class: "text-blue-500 hover:text-blue-700" %>
    </li>
    
    <% if @categories.present? %>
      <% @categories.each do |category| %>
        <li class="mb-2">
          <%= link_to category.name, articles_path(category_id: category.id), class: "text-blue-500 hover:text-blue-700" %>
        </li>
      <% end %>
    <% else %>
      <li class="mb-2 text-gray-500">No categories available</li>
    <% end %>
  </ul>
</aside>


        <!-- Main Content Area -->
        <main class="flex-1 ">
        <div class="bg-white rounded-lg p-6">
        <h2 class="text-4xl font-bold mb-2 ">Articles</h2>
                <p >ROR 101 <br> Our blog has <%= Article.public_count %> articles and counting!</p>
                
                <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 py-8">
                    <% @articles.each do |article| %>
                    <li class="mx-auto max-w-md overflow-hidden rounded-lg bg-white shadow">
                        <%= link_to article do %>
                            <% if article.image.attached? %>
                                <%= image_tag article.image, class: "w-full h-40 object-cover" %>
                            <% else %>
                                <%= image_tag 'https://via.placeholder.com/1000', class: 'w-full h-40 object-cover', alt: article.title %>
                            <% end %>
                            <div class="p-4">
                                <p class="mb-1 text-xs text-primary-800 font-light">
                                    <time><%= article.created_at.strftime("%d %b %Y") %></time>
                                </p>
                                <h3 class="text-xl font-medium text-gray-900">
                                    <%= link_to article.title, article, class: "text-green-500" %>
                                </h3>
                                <p class="mt-1 text-gray-500 break-words">
                                    <%= truncate(article.body, length: 50) %>
                                </p>

                                <div class="mt-4 flex gap-6">
                                    <div class="text-xs font-medium text-gray-500 flex items-center">
                                        <i class="fas fa-eye w-4 h-4 mr-1"></i>
                                        <span><%= article.views_count %></span>
                                    </div>

                                    <div class="text-xs font-medium text-gray-500 flex items-center">
                                        <i class="fas fa-comment w-4 h-4 mr-1"></i>
                                        <span><%= article.comments.size %></span>
                                    </div>

                                    <div class="text-xs font-medium text-gray-500 flex items-center">
                                        <i class="fas fa-thumbs-up w-4 h-4 mr-1"></i>
                                        <span>7</span>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </li>
                    <% end %>
                    <li class="flex justify-center items-center">
                        <%= link_to "New Article", new_article_path, class: "inline-block bg-green-500 text-white px-6 py-2 rounded-full hover:bg-green-600 transition-colors duration-200 text-center" %>
                    </li>
                </ul>
            </div>
        </main>
    </div>

